  }

  function buildQuiz(){
    const u = unitFilter.value;
    const n = Number(countFilter.value);

    let pool = (u==="all") ? BANK : BANK.filter(x=>x.unit===u);
    pool = shuffle(pool).slice(0, Math.min(n, pool.length));

    QUIZ = pool.map((item, idx) => ({...item, id: idx}));
